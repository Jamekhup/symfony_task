{# templates/pagination.html.twig #}
<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if pagination.hasPreviousPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.query|merge({(pagination.pageParameterName): pagination.previousPage})) }}" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
        {% endif %}

        {% for page in pagination.pagesInRange %}
            {% if page != pagination.currentPageNumber %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(pagination.route, pagination.query|merge({(pagination.pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}

        {% if pagination.hasNextPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.query|merge({(pagination.pageParameterName): pagination.nextPage})) }}" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
