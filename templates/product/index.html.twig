{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <main>
        <div class="top">
            <div class="searchForm">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary" style="display:none">Search</button>
                {{ form_end(form) }}
            </div>
            <div class="home">
                <div>
                    <a href="{{ path('export_product') }}" class="export">Export</a>
                </div>
                <div>
                    <a href="{{ path('import_product') }}" class="import">Import</a>
                </div>
                <div>
                    <a href="{{ path('app_product_new') }}" class="addnew">Add New</a>
                </div>
            </div>
        </div>

        <div class="table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Created At</th>
                        <th>Detail</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in pagination %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>$ {{ product.price }}</td>
                        <td>{{ product.stock }}</td>
                        <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="detail">Detail</a>
                        </td>
                        <td>
                            <div class="action">
                                <div>
                                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="actionBtn edit">Edit</a>
                                </div>
                                <div>
                                    {{ include('product/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr class="no-data">
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>

        
    </main>
{% endblock %}
